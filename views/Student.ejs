<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Student</title>
  <link rel="stylesheet" href="/Styles/style.css" >
</head>
<body>
  <h2>All Students</h2>
  <a class="add-button" href="/Students/add">+ Add New Student</a>

  <table>
    <thead>
      <tr>
        <th>Student seq_num</th>
        <th>Student Name</th>
        <th>Faculty Name</th>
        <th>Courses</th>
        <th>Degree</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < allStudents.length; i++) { %>
        <tr>
          <td data-label="Student seq_num"><%= i+1 %></td>
          <td data-label="Student Name"><%= allStudents[i].FirstName +" "+allStudents[i].lastName %></td>
          <td data-label="FacultyName"><%= allStudents[i].FacultyID?.FacultyName || 'N/A'%></td>
          <td>
            <ul>
                <% for(let courseIndex = 0;courseIndex < allStudents[i].Courses.length; courseIndex++) { %>
                    <li> <%=allStudents[i].Courses[courseIndex]?.CourseID?.CourseName || 'N/A' %></li>
                <%}%>
            </ul>
          </td>
          <td data-label="Final Mark"><%= allStudents[i].grade %></td>
          <td><img src="Icons/bin.png" alt="" class="binImg" data-id = "<%=allStudents[i]._id %>" title="Delete Student"></td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <script src="Scripts/studentDeletionScript.js"></script>
</body>
</html>
